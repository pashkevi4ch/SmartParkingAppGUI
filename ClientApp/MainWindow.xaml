<Window x:Class="ClientApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientApp"
        mc:Ignorable="d"
        Title="Client Application" Height="450" Width="450">
    <Grid OpacityMask="#FF7F3D3D">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Welcome to SmartParkingApp!" HorizontalAlignment="Center" Margin="30"/>
        <TextBlock Grid.Row="1" Text="Have you already registered?" HorizontalAlignment="Center" Margin="30" FontStyle='Oblique'/>
        <RadioButton Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Center">Sign in</RadioButton>
        <RadioButton Grid.Row="3" HorizontalAlignment="Left" VerticalAlignment="Center">Sign up</RadioButton>
        <Button Grid.Row="4" HorizontalAlignment="Center" VerticalAlignment="Center" Background="#FFABFFFD" BorderBrush="White" Foreground="Black" Name="ContinueButton">Continue</Button>
    </Grid>
</Window>
